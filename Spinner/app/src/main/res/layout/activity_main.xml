<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_spinner1"
        android:textColor="@color/colorAccent"
        android:text="Normal Spinner (Combobox)"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/normal_spinner"
        android:layout_below="@+id/txt_spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>
    <TextView

        android:id="@+id/txt_spinner2"
        android:layout_below="@+id/normal_spinner"
        android:textColor="@color/colorAccent"
        android:text="Custom Spinner"

        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner

        android:id="@+id/custom_spinner"
        android:layout_below="@+id/txt_spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>


</RelativeLayout>