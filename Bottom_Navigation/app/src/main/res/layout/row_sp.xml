<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_row">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/hinh_sanpham_row"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/ten_sanpham_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hinh_sanpham_row"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
             />
        <TextView

            android:layout_toRightOf="@+id/hinh_sanpham_row"
            android:layout_below="@+id/ten_sanpham_row"
            android:id="@+id/text_gianhapvao_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá nhập vào"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gianhapvao_row"
            android:layout_toRightOf="@+id/text_gianhapvao_row"
            android:text="4342"
            android:layout_below="@+id/ten_sanpham_row"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/hinh_sanpham_row"
            android:layout_below="@+id/text_gianhapvao_row"
            android:id="@+id/text_giaban_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá bán"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giaban_row"
            android:layout_toRightOf="@+id/text_giaban_row"
            android:text="4342"
            android:layout_below="@+id/gianhapvao_row"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/hinh_sanpham_row"
            android:layout_below="@+id/text_giaban_row"
            android:id="@+id/text_soluong_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soluong_row"
            android:layout_toRightOf="@+id/text_soluong_row"
            android:text="4342"
            android:layout_below="@+id/giaban_row"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/hinh_sanpham_row"
            android:layout_below="@+id/text_soluong_row"
            android:id="@+id/text_donvitinh_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn vị tính"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donvitinh_row"
            android:layout_toRightOf="@+id/text_donvitinh_row"
            android:text="4342"
            android:layout_below="@+id/soluong_row"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"/>
        <ImageView
            android:id="@+id/xoa_sp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



    </android.support.v7.widget.CardView>

